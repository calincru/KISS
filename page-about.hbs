{{!< default}}

<main role="main">
    <article class="{{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">

        {{! In the ABOUT page display only the title and the content}}
        {{#post}}

        <h1 class="post-title">{{{title}}}</h1>
        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
            <section class="share">
                <h4 class="post-share">Share this page</h4>
                <ul>
                    <li><a href="https://plus.google.com/share?url={{url absolute="true"}}"
                           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                        <i class="icon icon-gplus"></i>
                    </a></li>
                    <li><a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                           onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                        <i class="icon icon-twitter"></i>
                    </a></li>
                    <li><a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                           onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                        <i class="icon icon-facebook"></i>
                    </a></li>
                </ul>
           </section>
        </footer>
        {{/post}}

    </article>
</main>
