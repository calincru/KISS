{{!< default}}

<main role="main">
    <article class="{{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}
        <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}}on {{tags separator=" | "}}{{/if}}</span>
        <h1 class="post-title">{{{title}}}</h1>
        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
            {{> disqus }}
        </footer>

        {{/post}}

    </article>
</main>
